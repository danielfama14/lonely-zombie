    <div class="links">
      <a href=""
        >Lonely Zombie</a
      >&nbsp;&nbsp;<span class="separator">|</span>&nbsp;&nbsp;<a
        href=""
        >Login</a
      >
    </div>
    <canvas id="game"></canvas>
  </body>
</html>
